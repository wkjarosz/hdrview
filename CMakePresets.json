    },
    {
      "name": "macos-arm64-brew-debug",
      "displayName": "Debug",
      "inherits": "build-base-debug",
      "configurePreset": "macos-arm64-brew"
    },
    {
      "name": "macos-arm64-brew-release",
      "displayName": "Release",
